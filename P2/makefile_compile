.PHONY: clean
CC=gcc
CFLAGS=-std=c99
LINK=-lm
SRC=src
BIN=bin

all: $(BIN)/generador $(BIN)/mejora1 $(BIN)/mejora2 $(BIN)/mejora3 $(BIN)/modificacion1 $(BIN)/modificacion2 $(BIN)/gen_congruencial

$(BIN)/generador: $(SRC)/generador.c
	$(CC) $(CFLAGS) $< -o $@ $(LINK)

$(BIN)/modificacion1: $(SRC)/modificacion1.c
	$(CC) $(CFLAGS) $< -o $@ $(LINK)

$(BIN)/modificacion2: $(SRC)/modificacion2.c
	$(CC) $(CFLAGS) $< -o $@ $(LINK)

$(BIN)/mejora1: $(SRC)/mejora1.c
	$(CC) $(CFLAGS) $< -o $@ $(LINK)

$(BIN)/mejora2: $(SRC)/mejora2.c
	$(CC) $(CFLAGS) $< -o $@ $(LINK)

$(BIN)/mejora3: $(SRC)/mejora3.c
	$(CC) $(CFLAGS) $< -o $@ $(LINK)

$(BIN)/gen_congruencial: $(SRC)/gen_congruencial.c
	$(CC) $(CFLAGS) $< -o $@ $(LINK)

clean:
	@echo Limpiando directorio $(BIN)/
	rm -f $(BIN)/*
